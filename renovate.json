{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    "helpers:pinGitHubActionDigests"
  ],
  "branchNameStrict": true,
  "branchPrefix": "renovate-",
  "commitMessageAction": "Renovate Update",
  "labels": ["Dependencies", "Renovate"],
  "configMigration": true,
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "description": [
        "Ignore Dockerfile Node upgrades",
        "Node 20.3.x doesn't work with our local versions of Docker so we must lock to 20.2.x for now"
      ],
      "matchFileNames": ["docker/sirius-lpa-frontend/Dockerfile"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["minor"],
      "enabled": false
    },
    {
      "automerge": true,
      "groupName": "Patch & Minor Updates",
      "groupSlug": "all-minor-patch-updates",
      "matchUpdateTypes": ["minor", "patch"],
      "prPriority": 1,
      "minimumReleaseAge": "3 days",
      "matchPackageNames": ["*"]
    },
    {
      "automerge": true,
      "groupName": "Github Patch & Minor Updates",
      "groupSlug": "github-minor-patch-updates",
      "matchUpdateTypes": ["minor", "patch"],
      "prPriority": 2,
      "minimumReleaseAge": "3 days",
      "matchPackageNames": ["*"],
      "matchFileNames": [".github/**"]
    }
  ],
  "major": {
    "labels": ["Dependencies", "Renovate"],
    "minimumReleaseAge": "3 days"
  },
  "vulnerabilityAlerts": {
    "groupName": "Vulnerability Patches",
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": null,
    "rangeStrategy": "update-lockfile",
    "commitMessagePrefix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  }
}
